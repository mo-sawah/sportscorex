{
  "$schema": "https://schemas.wp.org/trunk/block-editor/block.json",
  "apiVersion": 3,
  "name": "sportscorex/live-scores",
  "version": "1.0.0",
  "title": "Live Scores",
  "category": "widgets",
  "icon": "chart-line",
  "description": "Display live sports scores with real-time updates",
  "keywords": ["sports", "scores", "live", "football"],
  "textdomain": "sportscorex",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "sport": {
      "type": "string",
      "default": "football"
    },
    "league": {
      "type": "string",
      "default": ""
    },
    "theme": {
      "type": "string",
      "default": "auto"
    },
    "refreshInterval": {
      "type": "number",
      "default": 30
    }
  },
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "text": true,
      "gradients": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    }
  }
}
